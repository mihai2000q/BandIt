<resources>
    <!-- Base application theme. -->
    <style name="Theme.BandIt" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_spring_green</item>
        <item name="colorPrimaryVariant">@color/hookers_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hookers_green</item>
        <item name="colorSecondaryVariant">@color/rich_dark_green</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Tertiary brand color -->
        <item name="colorTertiary">@color/dark_sea_green</item>
        <item name="colorOnTertiary">@color/white</item>

        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:dialogCornerRadius">20dp</item>
        <item name="cardViewStyle">@style/AppCardViewTheme</item>
    </style>
    <style name="AppCardViewTheme" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_row">0</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_marginHorizontal">12dp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>
</resources>