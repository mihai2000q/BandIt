<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/dp_8"
        android:orientation="vertical"
        android:padding="@dimen/dp_16">

        <TextView
            android:id="@+id/image_picker_tv_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16"
            android:gravity="center"
            android:text="@string/image_picker_header"
            android:textColor="@color/light_gray"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/image_picker_tv_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:drawablePadding="@dimen/dp_32"
            android:gravity="start|center_vertical"
            android:paddingVertical="@dimen/dp_8"
            android:text="@string/image_picker_camera"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_camera_photo" />

        <TextView
            android:id="@+id/image_picker_tv_gallery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/white"
            android:drawablePadding="@dimen/dp_32"
            android:gravity="start|center_vertical"
            android:paddingVertical="@dimen/dp_8"
            android:text="@string/image_picker_gallery"
            android:textSize="20sp"
            app:drawableStartCompat="@drawable/ic_gallery_photo" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dp_8"

            android:layout_marginBottom="@dimen/dp_8"
            android:background="@color/dark_gray" />

    </LinearLayout>
</layout>