<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/image_picker_tv_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/poppins_light"
        android:gravity="center"
        android:text="@string/image_picker_header"
        android:textColor="@color/light_gray"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/image_picker_tv_camera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:paddingVertical="8dp"
        android:text="@string/image_picker_camera"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_camera_photo" />

    <TextView
        android:id="@+id/image_picker_tv_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:drawablePadding="32dp"
        android:gravity="start|center_vertical"
        android:paddingVertical="8dp"
        android:text="@string/image_picker_gallery"
        android:textSize="20sp"
        app:drawableStartCompat="@drawable/ic_gallery_photo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:background="@color/dark_gray" />

</LinearLayout>
